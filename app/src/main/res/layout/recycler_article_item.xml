<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/racycler_item">



    <ImageView
        android:id="@+id/img_article"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:background="@drawable/circle" />

    <TextView
        android:id="@+id/tx_article"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/img_article"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#C43A3A"
        android:text="Ways of disease prevention"
        android:textColor="#ffff"
        />

    <ImageView
        android:id="@+id/recycler_img2_article"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/img_article"
        android:layout_alignEnd="@+id/img_article"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="320dp"
        android:background="@drawable/fav_article"/>

</RelativeLayout>