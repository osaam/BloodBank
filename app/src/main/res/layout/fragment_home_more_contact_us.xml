<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.folder.BaseFragment">

    <RelativeLayout
        android:id="@+id/fragment_more_relatev_contact_us"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#F7F2F2"
        >

        <TextView
            android:id="@+id/fragment_more_txt_contact_us"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:paddingTop="15dp"
            android:text="phone"
            android:textColor="@color/colorSliderSelected"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/fragment_more_img_contact_us"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/fragment_more_txt_contact_us"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-3dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_phone_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/fragment_more_img_contact_us"
            android:text="01111073867"
            android:textSize="25dp" />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/fragment_more_img_contact_us"
            android:layout_centerHorizontal="true"
            android:background="@color/colorSliderSelected"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_more_relatev_email"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#F7F2F2"
        android:layout_below="@+id/fragment_more_relatev_contact_us"
        >

        <TextView
            android:id="@+id/fragment_more_txt_email"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:paddingTop="15dp"
            android:text="E- mail"
            android:textColor="@color/colorSliderSelected"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/fragment_more_img_email"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/fragment_more_txt_email"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-3dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_email_black2_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/fragment_more_img_email"
            android:text="osamaesh3rawy98@gmail.com"
            android:textSize="22dp" />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/fragment_more_img_email"
            android:layout_centerHorizontal="true"
            android:background="@color/colorSliderSelected"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_more_relatev_social"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/fragment_more_relatev_email"
        android:padding="15dp"
        >
    <Button
        android:id="@+id/fragment_more_btn_face"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:background="@drawable/face"
        />
        <Button
            android:id="@+id/fragment_more_btn_insta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/insta"
            android:layout_toRightOf="@+id/fragment_more_btn_face"
            />
        <Button
            android:id="@+id/fragment_more_btn_twetter"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:background="@drawable/twetter"
            android:layout_below="@id/fragment_more_btn_face"
            />
        <Button
            android:id="@+id/fragment_more_btn_youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/youtube"
            android:layout_toRightOf="@+id/fragment_more_btn_twetter"
            android:layout_below="@id/fragment_more_btn_insta"
            />
    </RelativeLayout>
        <EditText
            android:id="@+id/fragment_more_txt_title"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:hint="Title of massege"
            android:textColor="#D86161"
            android:layout_below="@id/fragment_more_relatev_social"
            android:background="@drawable/circle_gray"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:textColorHint="#D86161"

            />
    <EditText
        android:id="@+id/fragment_more_txt_massege"
        android:layout_width="370dp"
        android:layout_height="180dp"
        android:hint="MASSEGE"
        android:textColorHint="#D86161"
        android:layout_below="@id/fragment_more_txt_title"
        android:background="@drawable/circle_gray"
        android:layout_centerVertical="true"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:paddingTop="30dp"

        />
    <Button
        android:id="@+id/fragment_more_btn_send"
        android:layout_width="195dp"
        android:layout_height="40dp"
        android:background="@drawable/circle"
        android:backgroundTint="#D86161"
        android:layout_below="@id/fragment_more_txt_massege"
        android:layout_centerHorizontal="true"
        android:text="SEND"
        android:textSize="25dp"
        android:textColor="#ffff"
        />


   </RelativeLayout>