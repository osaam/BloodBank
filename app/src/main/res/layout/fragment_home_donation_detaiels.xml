<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.folder.BaseFragment">

    <RelativeLayout
        android:id="@+id/fragment_more_relatev_fav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/fragment_more_txt_fav"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:text="name :"
            android:textColor="@color/colorSliderSelected"
            android:textSize="25sp" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorSliderSelected" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_more_relatev_contact"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/fragment_more_relatev_fav"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/fragment_more_txt_contact"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:text=" age :"
            android:textColor="@color/colorSliderSelected"
            android:textSize="25sp" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorSliderSelected" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_more_relatev_about"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/fragment_more_relatev_contact"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/fragment_more_txt_about"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:text="blood tybe :"
            android:textColor="@color/colorSliderSelected"
            android:textSize="25sp" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorSliderSelected" />
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_more_relatev_rate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/fragment_more_relatev_about"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/fragment_more_txt_rate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:text="number of blood :"
            android:textColor="@color/colorSliderSelected"
            android:textSize="25sp" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorSliderSelected" />
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_more_relatev_notify"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/fragment_more_relatev_rate"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/fragment_more_txt_notify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"

            android:paddingStart="10dp"
            android:text=" address:"
            android:textColor="@color/colorSliderSelected"
            android:textSize="25sp" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorSliderSelected" />
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_more_relatev_out"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/fragment_more_relatev_notify"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/fragment_more_txt_out"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:text=" phone :"
            android:textColor="@color/colorSliderSelected"
            android:textSize="25sp" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorSliderSelected" />
        />
    </RelativeLayout>

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/fragment_more_relatev_out"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_gray"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:text="uorgjvoriugjvoifrngvoriubrbnetu[obnaetu[ooifnvu[oe"
        android:textColor="@color/colorSliderSelected"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_call"
        android:layout_below="@+id/about" />

    <Button
        android:id="@+id/btn_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle"
        android:text="call now"
        android:textColor="@color/colorAccent" />
</RelativeLayout>